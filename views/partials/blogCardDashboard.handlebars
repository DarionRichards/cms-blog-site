<section class="blog-card">
	<section class="blog-content">
		<div class="title">
			<h2>{{title}}</h2>
		</div>
		<div class="date">
			<h6>{{date}}</h6>
		</div>
		<div class="blog-text">
			<h3>
				{{content}}
			</h3>
		</div>
		<div class="blog-link dashboard-blog-links">
			<a
				href="/edit-blog/{{id}}"
				class="edit-button"
				style="padding: 0.6rem;"
			>Edit Blog</a>
			<button class="delete-button" data="{{id}}">Delete Blog</button>
		</div>
	</section>
	<section class="blog-thumbnail">
		<div class="thumbnail">
			<a href="https://placeholder.com">
				<img src="https://via.placeholder.com/150" />
			</a>
		</div>
	</section>
</section>