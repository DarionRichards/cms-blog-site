<section class="blog-card">
	<section class="blog-content">
		<div class="title">
			<h2>{{blog.title}}</h2>
		</div>
		<div class="date">
			<h6>{{blog.date}}</h6>
		</div>
		<div class="blog-text">
			<h3>
				{{blog.content}}
			</h3>
		</div>
		<div class="blog-link view-blog-links">
			Created by:
			{{blogAuthor.firstName}}
			{{blogAuthor.lastName}}
		</div>
	</section>
	<section class="blog-thumbnail">
		<div class="thumbnail">
			<a href="https://placeholder.com"><img
					src="https://via.placeholder.com/150"
				/></a>
		</div>
	</section>
</section>