<header>
	{{#if loggedIn}}
  	{{> privateNavbar}}
  	{{else}}
  	{{> publicNavbar}}
 	{{/if}}
</header>

<main>
	<section class="content-wrapper">
		{{#if blog}}
		{{#each blog}}
		<section class="blog-card">
			<section class="blog-content">
				<div class="title">
					<h2>{{this.title}}</h2>
				</div>
				<div class="date">
					<h6>01/01/2022</h6>
				</div>
				<div class="blog-text">
					<h3>
						{{this.content}}
					</h3>
				</div>
				<div class="blog-link">
					<a href="/blogs/:id" class="link-styling" style="cursor: pointer">Read
						More</a>
				</div>
			</section>
			<section class="blog-thumbnail">
				<div class="thumbnail">
					<a href="https://placeholder.com"><img
							src="https://via.placeholder.com/150"
						/></a>
				</div>
			</section>
		</section>
		{{/each}}
		{{else}}
		<section class="no-blogs-hero">No blogs posted</section>
		{{/if}}
	</section>
</main>