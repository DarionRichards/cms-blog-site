<section class="blog-card">
	<section class="blog-content">
		<div class="title">
			<h2>{{this.title}}</h2>
		</div>
		<div class="date">
			<h6>{{this.date}}</h6>
		</div>
		<div class="blog-text">
			<h3>
				{{this.content}}
			</h3>
		</div>
		<div class="blog-link">
			<a
				href="/blogs/{{this.id}}"
				id="blog-read-more"
				class="link-styling"
				style="cursor: pointer"
			>Read More</a>
		</div>
	</section>
	<section class="blog-thumbnail">
		<div class="thumbnail">
			<a href="https://placeholder.com"><img
					src="https://via.placeholder.com/150"
				/></a>
		</div>
	</section>
</section>